@{
    ViewBag.Title = "Find Your Wizard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Fonts and Icons -->
    <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/png" href="~/Content/Images/harry-potter-logo.png">

    <style>
        /* General Reset */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
            font-family: 'MedievalSharp', cursive;
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('../../content/images/harrypotterimg.jpg') no-repeat center center fixed;
            background-size: cover;
            animation: backgroundPan 20s linear infinite;
        }

        /* Background Animation */
        @@keyframes backgroundPan {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Search Container */
        .search-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            perspective: 1000px;
            animation: fadeIn 2s ease-in-out;
        }

        /* Magic Font */
        .magic-font {
            font-size: 3rem;
            color: #ffd700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            margin-bottom: 20px;
            animation: float 3s ease-in-out infinite;
        }

        /* Search Form */
        .search-form {
            background: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
            transform-style: preserve-3d;
            transition: transform 0.5s;
        }

            .search-form:hover {
                transform: rotateY(10deg) rotateX(10deg) translateZ(20px);
            }

        /* Input Group */
        .input-group {
            display: flex;
            align-items: center;
        }

        /* Magic Input */
        .magic-input {
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid #ffd700;
            border-radius: 25px;
            padding: 10px 20px;
            color: #fff;
            font-size: 1.2rem;
            outline: none;
            transition: all 0.3s ease;
            width: 300px;
        }

            .magic-input::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

            .magic-input:focus {
                border-color: #ff6b6b;
                box-shadow: 0 0 10px rgba(255, 107, 107, 0.5);
            }

        /* Magic Button */
        .btn-magic {
            background: linear-gradient(45deg, #ff6b6b, #ffd700);
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            margin-left: 10px;
            color: #fff;
            font-size: 1.2rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-magic:hover {
                transform: scale(1.1);
                box-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
            }

        /* Animations */
        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <div class="search-container">
        <h1 class="magic-font">Discover Your Hogwarts Legacy</h1>
        @using (Html.BeginForm("Search", "Character", FormMethod.Post, new { @class = "search-form" }))
        {
            <div class="input-group">
                @Html.TextBox("characterName", null, new { @class = "form-control magic-input", placeholder = "Enter character name..." })
                <button type="submit" class="btn btn-magic">
                    <i class="fas fa-wand-sparkles"></i> Reveal
                </button>
            </div>
        }
    </div>
</body>
</html>